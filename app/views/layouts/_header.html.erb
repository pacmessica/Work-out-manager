<div>
  <h1 id="title">Workout Manager</h1>
</div>
<div class="lower-header">
  <div class="header-links">
    <% if user_signed_in? %>
      <%= link_to "My Workouts", root_path%>
    <% end %>
    <%= link_to "Popular", favourites_path%>
  </div>
  <div class="user">
    <% if !user_signed_in? %>
      <%= link_to "Log In", new_user_session_path, class: "btn user-link" %>
    <% else %>
      <span><%= current_user.email %></span>
      <%= link_to "Log Out", destroy_user_session_path, class: "btn", :method => :delete %>
    <% end %>
  </div>
</div>
