<div class="workout-body">

  <div class="workout-overview">
    <h1 class="workout-title"><%= @workout.name %></h1>
    <p class="workout-description"><%= @workout.description %></p>

    <div class="exercise-container">
      <% @workout.exercises.each_with_index do |exercise, index| %>
      <div class="exercise-panel">
        <%= index + 1 %>.
        <%= exercise.name %>
        <div class="exercise-image"><%= image_tag(exercise.image, width:"100", height:"auto") %></div>
      </div>
      <% end %>
    </div>

    <a href="#" class="start-workout button" data-workoutinterval="<%=@workout.interval%>">Start Workout</a>
  </div>

  <div class="workout-animation">
      <% @workout.exercises_workouts.each do |exercises_workout| %>
      <div class="exercise-view hidden" data-exercisetime="<%= exercises_workout.time %>">
        <h1><%= exercises_workout.exercise.name %></h1>
        <div class="exercise-jumbo-image"><%= image_tag(exercises_workout.exercise.image, width:"400", height:"auto") %></div>
      </div>
      <% end %>
      <a href="#" class="pause-workout button">Pause</a>
  </div>

  <div class="rest-countdown hidden">
    <h2>BREAK</h2>
  </div>

</div>
